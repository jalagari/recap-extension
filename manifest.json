{
  "manifest_version": 3,
  "name": "Recap - Session Recording",
  "version": "3.0.0",
  "description": "Record, configure, and replay user sessions with PII masking (ESM)",
  
  "permissions": [
    "activeTab",
    "sidePanel",
    "storage",
    "tabs"
  ],
  
  "action": {
    "default_title": "Recap",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "side_panel": {
    "default_path": "sidepanel/panel.html"
  },
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "lib/rrweb.min.js",
        "lib/rrweb-player.min.js",
        "lib/rrweb-player.min.css",
        "lib/recorder.js",
        "content/injected.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
